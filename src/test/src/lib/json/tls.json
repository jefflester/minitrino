{
  "tests": [
    {
      "type": "query",
      "name": "Test https endpoint",
      "sql": "SELECT 12345",
      "trinoCliArgs": [
        "--server 'https://trino:8443'",
        "--truststore-path /etc/starburst/ssl/truststore.jks",
        "--truststore-password changeit"
      ],
      "rowCount": 1,
      "contains": [
        "12345"
      ]
    },
    {
      "type": "shell",
      "name": "Test https endpoint via curl",
      "container": "trino",
      "command": "curl -v -k https://trino:8443",
      "exitCode": 0,
      "contains": [
        "Connected to trino",
        "port 8443",
        "subject: CN=*.starburstdata.com"
      ]
    },
    {
      "type": "logs",
      "name": "Ensure trino is running",
      "container": "trino",
      "contains": [
        "=== SERVER STARTED ==="
      ],
      "timeout": 60
    }
  ]
}