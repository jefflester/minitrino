{
  "tests": [
    {
      "type": "query",
      "name": "Test sysadmin role query",
      "sql": "SET ROLE sysadmin; SELECT * FROM tpch.tiny.customer LIMIT 1",
      "trinoCliArgs": [
        "--server 'http://localhost:8080'",
        "--user admin"
      ],
      "contains": [
        "custkey",
        "name",
        "address"
      ]
    },
    {
      "type": "query",
      "name": "Test set role - public (success)",
      "sql": "SET ROLE public",
      "trinoCliArgs": [
        "--server 'http://localhost:8080'",
        "--user foo"
      ],
      "contains": [
        "SET ROLE"
      ]
    },
    {
      "type": "query",
      "name": "Test set role - sysadmin (access denied)",
      "sql": "SET ROLE sysadmin",
      "trinoCliArgs": [
        "--server 'http://localhost:8080'",
        "--user foo"
      ],
      "contains": [
        "Access Denied"
      ]
    },
    {
      "type": "shell",
      "name": "Test biac api - list roles",
      "container": "minitrino-lib-test",
      "command": "curl -v -X GET -H 'X-Trino-User: admin' -H 'Accept: application/json' 'localhost:8080/api/v1/biac/roles?pageToken=&pageSize=&pageSort='",
      "exitCode": 0,
      "contains": [
        "sysadmin",
        "public"
      ]
    }
  ]
}
