{
  "tests": [
    {
      "type": "shell",
      "name": "Ensure Elasticsearch is running",
      "container": "minitrino-lib-test",
      "command": "echo 'pass'",
      "exitCode": 0,
      "healthcheck": {
        "command": "curl -v -k elasticsearch:9200/_cluster/health/user",
        "container": "minitrino-lib-test",
        "retries": 30,
        "exitCode": 0,
        "contains": [
          "\"status\":\"green\"",
          "\"active_shards\":1"
        ]
      }
    },
    {
      "type": "query",
      "name": "Test schema list",
      "sql": "SHOW SCHEMAS IN elasticsearch",
      "trinoCliArgs": [
        "--server 'http://localhost:8080'",
        "--user admin"
      ],
      "contains": [
        "default",
        "information_schema",
        "system"
      ]
    },
    {
      "type": "query",
      "name": "Test table select",
      "sql": "SELECT * FROM elasticsearch.default.user LIMIT 10",
      "trinoCliArgs": [
        "--server 'http://localhost:8080'",
        "--user admin"
      ],
      "contains": [
        "age",
        "bio",
        "full_name"
      ]
    }
  ]
}
