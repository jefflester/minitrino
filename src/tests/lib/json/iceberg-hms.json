
{
  "tests": [
    {
      "type": "logs",
      "name": "Ensure HMS is running",
      "container": "metastore-iceberg-hms-test",
      "contains": [
        "Starting Metastore Server"
      ],
      "timeout": 60
    },
    {
      "type": "query",
      "name": "Test create schema",
      "sql": "CREATE SCHEMA iceberg_hms.test_schema WITH (location = 's3a://minitrino/test_schema')",
      "trinoCliArgs": [
        "--server 'http://localhost:8080'",
        "--user admin"
      ],
      "contains": [
        "CREATE SCHEMA"
      ]
    },
    {
      "type": "query",
      "name": "Test schema list",
      "sql": "SHOW SCHEMAS IN iceberg_hms",
      "trinoCliArgs": [
        "--server 'http://localhost:8080'",
        "--user admin"
      ],
      "contains": [
        "default",
        "information_schema",
        "test_schema"
      ]
    },
    {
      "type": "query",
      "name": "Test CTAS",
      "sql": "CREATE TABLE iceberg_hms.test_schema.test_table AS SELECT * FROM tpch.tiny.customer LIMIT 10",
      "trinoCliArgs": [
        "--server 'http://localhost:8080'",
        "--user admin"
      ],
      "contains": [
        "CREATE TABLE: 10 rows"
      ]
    },
    {
      "type": "query",
      "name": "Test table select",
      "sql": "SELECT * FROM iceberg_hms.test_schema.test_table LIMIT 10",
      "trinoCliArgs": [
        "--server 'http://localhost:8080'",
        "--user admin"
      ],
      "contains": [
        "custkey",
        "name",
        "address"
      ]
    }
  ]
}
